<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="student_list_view">
      <field name="name">Student list</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <tree>
          <field name="f_name"/>
          <field name="l_name"/>
          <field name="sexe"/>
          <field name="identity_card"/>
          <field name="birthday"/>
          <field name="registration_date"/>
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="student_form_view">
      <field name="name">Student Form</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <form>
              <!-- <field name="image" widget="image"/> -->
              <field name="f_name"/>
              <field name="l_name"/>
              <field name="sexe"/>
              <field name="identity_card"/>
              <field name="birthday"/>
              <field name="registration_date"/>
              <field name="adresse"/>
              <field name="email"/>
              <field name="phone"/>
              
              <button name="action_test" string="Click Me !! " type="object" />
        </form>
        <!-- chatter -->
          <!-- <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers"/>
              <field name="activity_ids" widget="mail_activity"/>
              <field name="message_ids" widget="mail_thread"/>
          </div> -->
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="student_action_window">
      <field name="name">Student window</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="School" id="school_menu_root" sequence='0' web_icon="school,static/description/school.png"/>

    <!-- menu categories -->
    <menuitem name="Students" id="school_student_cat" parent="school_menu_root"/>
    <!--<menuitem name="Menu 2" id="school.menu_2" parent="school.menu_root"/>-->
    <!-- actions -->

    <menuitem name="List of students" id="school_student_list" parent="school_student_cat"
              action="student_action_window"/>
    <!-- <menuitem name="Server to list" id="school" parent="school.menu_2"
              action="school.action_server"/> -->

  </data>
</odoo>